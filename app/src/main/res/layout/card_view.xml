<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ASU_id"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:layout_marginRight="16dp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/First_name"
                android:layout_toRightOf="@+id/ASU_id"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_name"
                android:layout_toRightOf="@+id/First_name"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:layout_marginRight="16dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Grade"
                android:layout_toRightOf="@+id/last_name"
                android:layout_marginRight="16dp"
                android:text="Grade" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@mipmap/camera_icon"
                android:layout_toRightOf="@+id/Grade"
                android:id="@+id/take_picture"
                android:layout_marginRight="16dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/output"
                android:layout_toRightOf="@+id/take_picture"
                android:layout_marginRight="16dp"
                android:text="Write Output" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>